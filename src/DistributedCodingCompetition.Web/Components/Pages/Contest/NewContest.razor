@page "/contest/new"
@inject IOptions<ContestOptions> ContestOptions

<PageTitle>New Contest</PageTitle>

@* Application may allow for anyone to create an account or just system admins. *@
@if (ContestOptions.Value.OpenCreation)
{
    <AuthCheck />
    <AuthorizeView>
        <NewContestImpl />
    </AuthorizeView>
}
else
{
    <AuthCheck Admin />
    <AuthorizeView Roles="Admin">
        <NewContestImpl />
    </AuthorizeView>
}
