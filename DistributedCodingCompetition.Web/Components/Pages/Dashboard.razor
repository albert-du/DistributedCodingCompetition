@page "/dashboard"
@rendermode InteractiveServer
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IUserStateService UserStateService
@inject IOptions<ContestOptions> ContestOptions
@inject IApiService ApiService
@inject IModalService ModalService

<AuthCheck />

<h1 class="text-2xl">Dashboard</h1>

@if (user is not null)
{
    <p class="italic">Welcome, @user.Username</p>

    <div>
        <h2 class="text-lg">Entrered Contests</h2>
        @if (user.EnteredContests.Count == 0)
        {
            <p>You are not in any contests.</p>
        }
        else
        {
            <ul class="flex flex-col gap-y-3">
                @foreach (var contest in user.EnteredContests)
                {
                    <li>
                        <a href="contest/@contest.Id">@contest.Name</a>
                    </li>
                }
            </ul>
        }
    </div>

    @if (ContestOptions.Value.OpenCreation)
    {
        <a class="hover:underline" href="contest/new">Start Contest</a>
    }
    else
    {
        <AuthorizeView Roles="Admin">
            <a class="hover:underline" href="contest/new">Start Contest</a>
        </AuthorizeView>
    }

    @if (administered.Count > 0)
    {
        <div>
            <h2>Administered Contests</h2>
            <ul>
                @foreach (var contest in administered)
                {
                    <li>
                        <a href="contest/@contest.Id/Manage">@contest.Name</a>
                    </li>
                }
            </ul>
        </div>
    }

}
else
{
    <p>Loading...</p>
}

@code {
    User? user;
    IReadOnlyList<DistributedCodingCompetition.ApiService.Models.Contest> administered = [];
    int administeredPage = 1;
    protected override async Task OnInitializedAsync()
    {
        user = await UserStateService.UserAsync();
        if (user is null)
        {
            // should not happen thanks to state service and auth check
            ModalService.ShowError("User not found", "User not found, please log in again.");
            return;
        }
        (var success, var administra) = await ApiService.TryReadUserAdministratedContestsAsync(user.Id, 10, administeredPage);
        if (success && administra is not null)
        {
            administered = administra;
        }
    }
}
